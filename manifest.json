{
  "content_scripts": [
    {
      "matches": ["https://coefont.cloud/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "description": "When downloading a single wav file, you will also download a txt file.",
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 3,
  "name": "CoeFont Studio Auto Text Downloader",
  "version": "1.8",
  "permissions": ["downloads", "storage"],
  "options_ui":{
    "page": "options.html",
    "open_in_tab": false
  },
  "action":{
    "default_title": "保存するフォルダを指定",
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  }
}